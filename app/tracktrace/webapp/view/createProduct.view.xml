<mvc:View
    controllerName="tracktrace.controller.createProduct"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <ScrollContainer id="_IDGenScrollContainer2" vertical="true" height="100%">
        <tnt:ToolHeader  id="shellLikeToolHeaderOnlyMandatoryControls2" class="sapUiTinyMargin">
          
            <Title id="_IDGenTitle2" textAlign="Center" text="Production Page" wrapping="false">
                <layoutData>
                    <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayData3" priority="Disappear"/>
                </layoutData>
            </Title>
            <ToolbarSpacer id="_IDGenToolbarSpacer1" />
            <Avatar 
                id="_IDGenAvatar1" 
                src="test-resources/sap/tnt/images/Woman_avatar_01.png" 
                displaySize="XS" 
                press=".onAvatarPressed" 
                tooltip="Profile">
                <layoutData>
                    <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData3" priority="NeverOverflow"/>
                </layoutData>
            </Avatar>
        </tnt:ToolHeader>
            <l:VerticalLayout id="_IDGenVerticalLayout2" width="100%">
                <l:BlockLayout id="_IDGenBlockLayout2" background="Dashboard">
                    <l:BlockLayoutRow id="_IDGenBlockLayoutRow11">
                     
                    </l:BlockLayoutRow>


                    <l:BlockLayoutRow id="_IDGenBlockLayoutRow3">
                        <l:BlockLayoutCell id="_IDGenBlockLayoutCell3" width="90%">

                         <form:SimpleForm id="_IDGenSimpleForm1" class="tableBorder sapUiTinyMargin" editable="false">
                            <form:toolbar>
                                <Toolbar id="TB1">
                                    <Title id="Title1" text="Product Details"/>
                                    <ToolbarSpacer id="_IDGenToolbarSpacer4"/>
                                </Toolbar>
                            </form:toolbar>
                            <form:content>
                                <core:Title id="_IDGenTitle1"/>
                                <Label id="_IDLabel2" text="Material" design="Bold" class="sapUiTinyMarginTop" required="true"/>
                                <HBox id="SoldTPBox">
                                    <Input id="SoldTP_id" width="200px" showValueHelp="true" valueHelpRequest="onSoldToParty" required="true"/>
                                </HBox>
                                <Label id="_IDLabel4" text="Production Plant" design="Bold" class="sapUiTinyMarginTop" required="true"/>
                                <HBox id="_IDHBox2">
                                    <Input id="salesOrgDesc" showValueHelp="true" valueHelpRequest="onSoldToParty" width="200px" class="salesOrgDesc"/>
                                </HBox>
                                <Label id="_IDLabel6" text="Work Center" design="Bold" class="sapUiTinyMarginTop"/>
                                <HBox id="_IDHBox3">
                                    <Input id="distChan_id" width="200px"/>
                                </HBox>
                                <Label id="_IDLabel5" text="Quantity" design="Bold" class="sapUiTinyMarginTop"/>
                                <HBox id="_IDGenHBox4">
                                    <Input id="division_id" width="200px"/>
                                </HBox>
                                <Label id="_IDLabel16" text="Priority" design="Bold" class="sapUiTinyMarginTop"/>
                                <HBox id="_IDGenHBox15">
                                    <Input id="division_id17" width="200px"/>
                                </HBox>
                                <core:Title id="_IenTitle2"/>
                                <Label id="_IDnLabel3" text="Order Type" design="Bold" required="true" class="sapUiTinyMarginTop"/>
                                <HBox id="_IDGenHBox5">
                                    <Input id="ShipTP_id" width="200px" showValueHelp="true" valueHelpRequest="onShipToParty" required="true"/>
                                </HBox>
                                <Label id="_IDGenLabel30" text="BOM" design="Bold" class="sapUiTinyMarginTop"/>
                                <Input id="contractDescription" width="200px" showValueHelp="true" valueHelpRequest="onShipToParty" change="orgDetail"/>
                                <Label id="_IDGenLabel7" text="Start Date" design="Bold" class="sapUiTinyMarginTop"/>
                                <DatePicker id="DP1" placeholder="‎" change="onSelectDate" width="200px" ariaLabelledBy=""/>
                                <Label id="_IDGenLabel8" text="End Date" design="Bold" class="sapUiTinyMarginTop"/>
                                <DatePicker id="DP2" placeholder="‎" change="onSelectDate" width="200px"/>
                                 <Label id="_IDnLabel7" text="Remarks" design="Bold" class="sapUiTinyMarginTop"/>
                                <HBox id="_IDGenHBox18">
                                    <Input id="ShipTP_id19" width="200px" required="true"/>
                                </HBox>
                               
                            </form:content>
                        </form:SimpleForm>
                        </l:BlockLayoutCell>
                    </l:BlockLayoutRow>
                </l:BlockLayout>
            </l:VerticalLayout>
    </ScrollContainer>
</mvc:View>
