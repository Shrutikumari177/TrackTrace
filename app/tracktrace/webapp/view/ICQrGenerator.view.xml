<mvc:View
    controllerName="tracktrace.controller.ICQrGenerator"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <ScrollContainer
        id="IcQrGen_ScrollContainer"
        vertical="true"
        height="100%"
    >
       <tnt:ToolHeader  id="IcQrGen_ToolHeader" class="sapUiTinyMargin">
          
            <Title id="IcQrGen_Title" textAlign="Center" text="IC QR Generator" wrapping="false">
                <layoutData>
                    <OverflowToolbarLayoutData id="IcQrGen_OverflowToolbarLayoutData" priority="Disappear"/>
                </layoutData>
            </Title>
            <ToolbarSpacer id="IcQrGen_ToolbarSpacer" />
            
        </tnt:ToolHeader>
        <l:VerticalLayout
            id="IcQrGen_VerticalLayout"
            width="100%"
        >
            <l:BlockLayout
                id="IcQrGen_BlockLayout"
                background="Dashboard"
            >
                <l:BlockLayoutRow id="IcQrGen_BlockLayoutRow">
                    <l:BlockLayoutCell
                        id="IcQrGen_BlockLayoutCell"
                        width="90%"
                    >
                        <HBox id="IcQrGen_headerPage">
                            <Label
                                id="IcQrGen_BatchIdLabel"
                                class="sapUiTinyMarginTop"
                                design="Bold"
                                text="Batch ID"
                            />
                            <Input
                                id="IcQrGen_BatchIdInput"
                                class="sapUiTinyMarginBegin"
                                width="200px"
                                showValueHelp="true"
                                valueHelpRequest="onValueHelpBatch"
                            />

                            
                        </HBox>
                    </l:BlockLayoutCell>
                </l:BlockLayoutRow>

                <l:BlockLayoutRow
                    id="IcQrGen_BlockLayoutRowforTable"
                    visible="false"
                >
                    <l:BlockLayoutCell
                        id="IcQrGen_BlockLayoutCell2"
                        width="90%"
                    >
                     <HBox class="generateQr_area">
                     <Button text="Generate IC QR" press="onGenerateQR" type="Emphasized"/>
                       </HBox>
                        <Table
                            id="createTypeTable"
                            width="auto"
                            contextualWidth="Auto"
                            class="borderedTable"
                            mode="MultiSelect"
                            sticky="ColumnHeaders"
                            noDataText="{= ${materialDataModel>/materials}.length > 0 ? 'Loading...' : 'No Box Found' }"
                            selectionChange="onSelectionChange"
                            items="{materialDataModel>/materials}"

                         
                           
                        >
                            <columns>
                                <Column
                                    id="_IDGenColu"
                                    width="70px"
                                    hAlign="Center"
                                    visible="false"
                                >
                                    <Label
                                        id="_IDGenLel0"
                                        text="Box Code"
                                    />
                                </Column>
                                <Column
                                    id="_IDGenColu10"
                                    width="70px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="_IDGenLabel0"
                                        text="Seq No"
                                    />
                                </Column>
                                <Column
                                    id="_IDGenColun2"
                                    width="70px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="_IDGenLabel3"
                                        text="Batch ID"
                                    />
                                </Column>
                                <Column
                                    id="_IDGenColu1"
                                    width="70px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="_IDGenLabel2"
                                        text="Product Code"
                                    />
                                </Column>
                                
                                <Column
                                    id="_IDGenColun3"
                                    width="90px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="_IDGenLabel5"
                                        text="Manufacturing Date"
                                    />
                                </Column>
                                <Column
                                    id="_IDGenColum"
                                    width="70px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="_IDGenLabel4"
                                        text="Expiry Date"
                                    />
                                </Column>
                                <Column
                                    id="_IDGenColum3"
                                    width="70px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="_IDGenLabe6"
                                        text="Production ID"
                                    />
                                </Column>
                                <Column
                                    id="_IDGenColum31"
                                    width="80px"
                                    hAlign="Center"
                                    mergeDuplicates="true"
                                    
                                >
                                    <Label
                                        id="_IDGenLabe61"
                                        text="IC Code"
                                        textAlign="Center"
                                    />
                                </Column>
                                <Column
                                    id="_IDGenColum2"
                                    width="70px"
                                    hAlign="Center"
                                    mergeDuplicates="true"
                                >
                                    <Label
                                        id="_IDGenLabe5"
                                        text="QR Code"
                                        textAlign="Center"
                                    />
                                </Column>
                            </columns>

                            <ColumnListItem
                                id="_istItem1"
                                class="borderedRow"
                                press="onMaterialRowSelect"


                                
                            >
                                <cells  >
                                <Text
                                        id="_IDGenText25"
                                        class="inputItem"
                                        text="{materialDataModel>packaging}"

                                        
                                    />
                                <Text
                                        id="_IDGenText2"
                                        class="inputItem"
                                        text="{materialDataModel>SerialNo}"

                                        
                                    />
                                    
                                    <Text
                                        id="_IDGenText20"
                                        class="inputItem"
                                        text="{materialDataModel>BatchNo}"
                                    />
                                    <Text
                                        id="_IDGenText19"
                                        class="inputItem"
                                        text="{materialDataModel>Material}"
                                    />
                                    
                                    <Text
                                        id="_IDGenText21"
                                        class="inputItem"
                                        text="{materialDataModel>ManufactureDt}"
                                        
                                    />
                                    <Text
                                        id="_IDGenText22"
                                        class="inputItem"
                                        text="{materialDataModel>ExpiryDt}"
                                    />
                                    <Text
                                        id="_IDGenText24"
                                        class="inputItem"
                                        text="{materialDataModel>ProductionOrder}"
                                    />
                                    <Text
                                        id="_IDGenText274"
                                        class="inputItem"
                                        text="{materialDataModel>ICID}"
                                    />
                                    
                                    <Link   
                                   text="{= ${materialDataModel>ICQRCode} ? ${materialDataModel>ICQRCode} : '' }"
                                   visible="{= ${materialDataModel>ICQRCode} ? true : false }"
                                          press=".onViewQRCodePress" 
                                   />
                                </cells>
                            </ColumnListItem>
                        </Table>

                        <Dialog
                            id="qrDialog"
                            title="QR Code"
                            stretchOnPhone="true"
                         >
                            <customHeader>
                                <Toolbar>
                                    <Title text="QR Code" />
                                    <ToolbarSpacer />
                                    <Button
                                        icon="sap-icon://decline"
                                        press="onCloseQRDialog"
                                    />
                                </Toolbar>
                            </customHeader>
                            <content>
                                <Image
                                    class="qrImage"
                                    id="qrImage"
                                    src=""
                                    width="200px"
                                    height="200px"
                                />
                            </content>
                            <buttons>
                                <Button
                                    text="Print QR"
                                    press="onPrintQR"
                                    type="Emphasized"
                                />
                            </buttons>
                        </Dialog>
                    </l:BlockLayoutCell>
                </l:BlockLayoutRow>
            </l:BlockLayout>
        </l:VerticalLayout>
    </ScrollContainer>
</mvc:View>